<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Scripts/Public/main.js"></script>
</head>
<body>
    <a href="/">
        <img src="/Content/Images/banner.jpg" alt="banner" id="banner" />
    </a>
    <div id="rightBar">
            
        @RenderSection("rightBar", false)
        
        <div class="rightBarSection">
            @{Html.RenderPartial("~/Views/Shared/_LoginPartial.cshtml", null);}
        </div>
    </div>
    <div id="mainBar">
        @RenderBody()
    </div>    
</body>
</html>