@model List<InMemoryELP.Models.StoryViewModel>
@{
    Layout = null;
}

<h2>Pending Approval</h2>
@if (Model.Count() > 0)
{
    foreach (var story in Model)
    {
        <a href="/stories/story/@story.Id">
            <div class="StoryCard">
                <h2>@story.Title</h2>
                <p>by <span>@story.AuthorName</span></p>
                @if (story.ImageUrls.Count() > 0)
                {
                    var id = Guid.NewGuid();

                    <div id="@id">

                    </div>
                    <script>
                        $(document).ready(function () {
                            var imgs = JSON.parse('@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(story.ImageUrls))');
                            var ids = new Array();
                            if (imgs.length > 1) {

                                for (var i = 0; i < imgs.length; i++) {
                                    var imgId = '@id' + '-' + i;
                                    ids.push(imgId);

                                    $('#@id').append('<img id="' + imgId + '" src="' + imgs[i] + '" class="Image"/>');
                                }

                                imageSwapper(ids);
                            } else {
                                var imgId = '@id' + '-' + '0';
                                $('#@id').append('<img id="' + imgId + '" src="' + imgs[0] + '" class="Image" style="display:block;"/>');
                            }
                        })
                    </script>

                    <div class="PreviewBox">
                        <div class="Preview">
                            @story.Preview &#8230;
                        </div>
                        <div class="ReadMore">
                            Read more...
                        </div>
                    </div>

                }
            </div>
        </a>
    }
}
else
{
    <h3>Nothing Pending...</h3>
}
